    <TextView
        android:id="@+id/textView"
        android:layout_width="138dp"
        android:layout_height="77dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="257dp"
        android:layout_marginBottom="227dp"
